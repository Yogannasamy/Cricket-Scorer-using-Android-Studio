<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/cricket3"
    >

    <TextView
        android:layout_width="355dp"
        android:layout_height="77dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Cricket Scorer"
        android:textColor = "@android:color/white"
        android:textSize="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teams"
        android:textColor = "@android:color/white"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        />
    <EditText
        android:id="@+id/hostteamname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" "
        android:textColor = "@android:color/white"
        android:padding="10dp"
        android:layout_marginBottom="4dp"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/visitorteamname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" "
        android:textColor = "@android:color/white"
        android:padding="10dp"
        android:inputType="text"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toss won by?"
        android:textColor = "@android:color/white"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        />
    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGrp1">
        <RadioButton
            android:id="@+id/htoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Host Team"
            android:textSize="20dp"
            android:textColor = "@android:color/white"/>
        <RadioButton
            android:id="@+id/vtoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Visitor Team"
            android:textSize="20dp"
            android:textColor = "@android:color/white"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opted to?"
        android:textColor = "@android:color/white"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        />
    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGrp2">
        <RadioButton
            android:id="@+id/bat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bat"
            android:textColor = "@android:color/white"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/bowl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bowl"
            android:textColor = "@android:color/white"
            android:textSize="20dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overs?"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:textColor = "@android:color/white"
        />
    <EditText
        android:id="@+id/over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="00"
        android:padding="10dp"
        android:inputType="number"
        android:textSize="20dp"
        android:textColor = "@android:color/white"
        />
    <Button
        android:id="@+id/startbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start match"
        />

</LinearLayout>