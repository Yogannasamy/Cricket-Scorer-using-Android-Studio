<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".score_page"
    android:orientation="vertical"
    android:padding="10dp"


    android:background="@drawable/cricket3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fstline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1st innings"
                android:textColor = "@android:color/white"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 -"
                android:textColor = "@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totalWicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor = "@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totalOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (0."
                android:textColor = "@android:color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totalBall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0)"
                android:textColor = "@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/runRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@android:color/white"
            android:text="CRR : 0.00"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/inngsscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor = "@android:color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/reqruns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor = "@android:color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/gover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor = "@android:color/white"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Runs -->

            <TextView
                android:id="@+id/batsman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batsman Name"
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runs "
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:textColor = "@android:color/white"
                android:textSize="16sp" />

            <!-- Balls -->
            <TextView
                android:id="@+id/bl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor = "@android:color/white"
                android:text="Balls "
                android:gravity="center"
                android:textSize="16sp" />

            <!-- Strike Rate -->
            <TextView
                android:id="@+id/sr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Strike Rate "
                android:gravity="center"
                android:textColor = "@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Runs -->

            <TextView
                android:id="@+id/sbatsman"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Batsman Name"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rn1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0"
                android:gravity="center"
                android:textColor = "@android:color/white"
                android:textSize="16sp" />

            <!-- Balls -->
            <TextView
                android:id="@+id/bl1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0"
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="16sp" />

            <!-- Strike Rate -->
            <TextView
                android:id="@+id/sr1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0.00"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Runs -->

            <TextView
                android:id="@+id/nsbatsman"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Batsman Name"
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/rn2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0"
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="16sp" />

            <!-- Balls -->
            <TextView
                android:id="@+id/bl2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0"
                android:gravity="center"
                android:textColor = "@android:color/white"
                android:textSize="16sp" />

            <!-- Strike Rate -->
            <TextView
                android:id="@+id/sr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0.00"
                android:gravity="center"
                android:textColor = "@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Runs -->

            <TextView
                android:id="@+id/obowl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bowler Name"
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="overs "
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:textSize="16sp" />

            <!-- Balls -->
            <TextView
                android:id="@+id/mdn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Maidains "
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="16sp" />

            <!-- Strike Rate -->
            <TextView
                android:id="@+id/wck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="wickits "
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Runs -->

            <TextView
                android:id="@+id/obow1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Bowler Name"
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ors1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0.0"
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="16sp" />

            <!-- Balls -->
            <TextView
                android:id="@+id/mdn1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0.0 "
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="16sp" />

            <!-- Strike Rate -->
            <TextView
                android:id="@+id/wck1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0"
                android:textColor = "@android:color/white"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zero"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="0" />

            <Button
                android:id="@+id/one"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="1" />

            <Button
                android:id="@+id/two"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="2" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="4" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="5" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/widebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="wide"
                android:textSize="18dp"
                android:textColor = "@android:color/white"/>

            <CheckBox
                android:id="@+id/noballbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="no ball"
                android:textSize="18dp"
                android:textColor = "@android:color/white"/>

            <CheckBox
                android:id="@+id/byesbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Byes"
                android:textSize="18dp"
                android:textColor = "@android:color/white"/>

            <CheckBox
                android:id="@+id/wicketbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Wicket"
                android:textSize="18dp"
                android:textColor = "@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/restartbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restart"
        />
</LinearLayout>
